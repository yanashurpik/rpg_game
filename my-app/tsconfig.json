{
    "compilerOptions": {
      "experimentalDecorators": true,
      "target": "ES2015",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "/",
      "jsx": "react",
      "rootDir": "./src",
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "include": ["src/**/*"],
}
